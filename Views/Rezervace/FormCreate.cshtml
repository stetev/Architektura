@model RestauraceApp.Models.Rezervace

<!DOCTYPE html>
<html>
<head>
    <title>Vytvořit Rezervaci</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            padding: 20px;
        }

        .container {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 300px;
            margin: 0 auto; /* Střední zarovnání */
            padding: 20px; /* Odstup od okraje kontejneru */
        }

        h2 {
            color: #333;
        }

        .form-group {
            margin-bottom: 15px;
            margin-right: 15px;
        }

        label {
            font-weight: bold;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Vytvořit Rezervaci</h2>
        @using (Html.BeginForm("FormCreate", "Rezervace", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.JmenoHosta)
                @Html.TextBoxFor(model => model.JmenoHosta, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.JmenoHosta)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Datum)
                @Html.TextBoxFor(model => model.Datum, "{0:yyyy-MM-dd HH:mm}", new { @class = "form-control", type = "datetime-local" })
                @Html.ValidationMessageFor(model => model.Datum)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PocetHostu)
                @Html.TextBoxFor(model => model.PocetHostu, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PocetHostu)
            </div>

            <button type="submit" class="btn btn-primary">Vytvořit Rezervaci</button>
        }
    </div>
</body>
</html>
